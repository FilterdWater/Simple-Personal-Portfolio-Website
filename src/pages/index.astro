---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import ProjectsList from "../components/ProjectsList.astro";
import { Image } from "astro:assets";
import SignalQrCode from "../assets/SignalGroupQr.png";
import Lars from "../assets/Lars.jpg";

import AboutMe from "../json/AboutMe.json";

import { calculateAge } from "../javascript/age";
const birthDate = "2005-04-01";
const age = calculateAge(birthDate);
---

<DefaultLayout>
  <div
    class="flex flex-col-reverse items-center justify-center gap-8 md:flex-row"
  >
    <div class="space-y-8 text-center md:text-start">
      <h1>Software Developer</h1>
      <div class="max-w-[26rem] text-xl">
        {age} jaar oud, gevestigd in Arnhem met een passie voor programmeren en technologie
      </div>
      <div
        class="my-6 flex max-w-[26rem] flex-wrap justify-center gap-3 md:justify-start"
      >
        <a
          href="https://www.linkedin.com/in/lars-van-holland-754a7b269/"
          target="_blank"
          class="flex max-w-32 grow items-center justify-center gap-1 rounded-lg border border-zinc-100 bg-zinc-50 p-2 text-sm transition hover:rotate-2 hover:scale-110 sm:gap-2 sm:px-4 sm:text-base"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1024 1024"
            class="size-5 shrink-0 sm:size-6"
            ><path
              fill="#0275b4"
              d="M847.7 112H176.3c-35.5 0-64.3 28.8-64.3 64.3v671.4c0 35.5 28.8 64.3 64.3 64.3h671.4c35.5 0 64.3-28.8 64.3-64.3V176.3c0-35.5-28.8-64.3-64.3-64.3m0 736q-671.7-.15-671.7-.3q.15-671.7.3-671.7q671.7.15 671.7.3q-.15 671.7-.3 671.7M230.6 411.9h118.7v381.8H230.6zm59.4-52.2c37.9 0 68.8-30.8 68.8-68.8a68.8 68.8 0 1 0-137.6 0c-.1 38 30.7 68.8 68.8 68.8m252.3 245.1c0-49.8 9.5-98 71.2-98c60.8 0 61.7 56.9 61.7 101.2v185.7h118.6V584.3c0-102.8-22.2-181.9-142.3-181.9c-57.7 0-96.4 31.7-112.3 61.7h-1.6v-52.2H423.7v381.8h118.6z"
            ></path></svg
          >
          LinkedIn
        </a>
        <a
          href="https://github.com/FilterdWater"
          target="_blank"
          class="flex max-w-32 grow items-center justify-center gap-1 rounded-lg border border-zinc-100 bg-zinc-50 p-2 text-sm transition hover:rotate-2 hover:scale-110 sm:gap-2 sm:px-4 sm:text-base"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="size-5 shrink-0 sm:size-6"
          >
            <path
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 19c-4.3 1.4-4.3-2.5-6-3m12 5v-3.5c0-1 .1-1.4-.5-2c2.8-.3 5.5-1.4 5.5-6a4.6 4.6 0 0 0-1.3-3.2a4.2 4.2 0 0 0-.1-3.2s-1.1-.3-3.5 1.3a12.3 12.3 0 0 0-6.2 0C6.5 2.8 5.4 3.1 5.4 3.1a4.2 4.2 0 0 0-.1 3.2A4.6 4.6 0 0 0 4 9.5c0 4.6 2.7 5.7 5.5 6c-.6.6-.6 1.2-.5 2V21"
            ></path>
          </svg>
          Github
        </a>
        <a
          href="#"
          target="_blank"
          class="flex max-w-32 grow items-center justify-center gap-1 rounded-lg border border-zinc-100 bg-zinc-50 p-2 text-sm transition hover:rotate-2 hover:scale-110 sm:gap-2 sm:px-4 sm:text-base"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
