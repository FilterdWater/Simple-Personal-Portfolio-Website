---
import Projects from "../json/Projects.json";
---

<div class="space-y-4">
  {
    Projects.map((project) => (
      <div class="space-y-3 rounded-sm p-4 outline outline-2 outline-zinc-950">
        <h3>{project.title}</h3>
        <p>{project.description}</p>
        <p>Tech stack: {project.tech_stack}</p>
        <div class="space-x-2">
          <a
            class="custom-link-underline"
            href={project.live_demo_link}
            target="_blank"
          >
            Live Demo
          </a>
          <a
            class="custom-link-underline"
            href={project.source}
            target="_blank"
          >
            Source
          </a>
        </div>
      </div>
    ))
  }
</div>
